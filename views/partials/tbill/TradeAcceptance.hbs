 
<table class="table table-bordered table-condensed" cellspacing="8" style="margin: 20px 0px;">
    <tr>
        <td colspan="6">
            <div class="billtitle"><span class="bankname">{{ PayeeBank }}</span>银行承兑汇票</div>
        </td>
    </tr>
    <tr>
        <td colspan="6">
            {{ formatDate1 IncomeBillDate }}
        </td>
    </tr>
    <tr>
        <td rowspan="3" class="titlecol">出票人</td>
        <td class="titlecol">全称</td>
        <td>{{ PayeeName }}</td>
        <td rowspan="3" class="titlecol">收款人</td>
        <td class="titlecol">全称</td>
        <td>{{ RemitterName }}</td>
    </tr>
    <tr>
        <td class="titlecol">账号</td>
        <td>{{ PayeeAcc }}</td>
        <td class="titlecol">账号</td>
        <td>{{ RemitterAcc }}</td>
    </tr>
    <tr>
        <td class="titlecol">开户银行</td>
        <td>{{ PayeeBank }}</td>
        <td class="titlecol">开户银行</td>
        <td>{{ RemitterBank }}</td>
    </tr>
    <tr>
        <td class="titlecol">
            金额
        </td>
        <td colspan="5">
            {{ formatMoney MoneyAmount  }}
        </td>
    </tr>
    <tr>
        <td class="titlecol">汇票到期日</td>
        <td colspan="2">{{ formatDate2 DrawBillDate }}</td>
        <td rowspan="2">承兑人</td>        
        <td colspan="2">行号: 00001</td>
    </tr>
    <tr>
        <td class="titlecol">
            承兑协议编号
        </td>
        <td colspan="2">1000003</td>
        <td colspan="2">
            地址: 
        </td>
    </tr>
</table>