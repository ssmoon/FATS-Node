<table class="table table-bordered table-condensed" cellspacing="8" style="margin: 20px 0px;">
    <tr>
        <td colspan="6">
            <div class="billtitle"><span class="bankname">{{ BankName }}</span>业务委托书</div>
        </td>
    </tr>
    <tr>
        <td colspan="6" class='center'>
            {{ formatDate3 ProxyDate }}
        </td>
    </tr>
    <tr>
        <td rowspan="3" class="titlecol">出票人</td>
        <td class="titlecol">全称</td>
        <td>{{ PayeeName }}</td>
        <td rowspan="3" class="titlecol">收款人</td>
        <td class="titlecol">全称</td>
        <td>{{ RemitterName }}</td>
    </tr>
    <tr>
        <td class="titlecol">账号</td>
        <td>{{ PayeeAcc }}</td>
        <td class="titlecol">账号</td>
        <td>{{ RemitterAcc }}</td>
    </tr>
    <tr>
        <td class="titlecol">开户银行</td>
        <td>{{ PayeeBank }}</td>
        <td class="titlecol">开户银行</td>
        <td>{{ RemitterBank }}</td>
    </tr>
    <tr>
        <td class="titlecol">
            金额
        </td>
        <td colspan="5">
            {{ formatMoney MoneyAmount }}            
        </td>
    </tr>
    <tr>
        <td class="titlecol">密码</td>
        <td colspan="2">&nbsp;</td>
        <td rowspan="3" colspan="3"></td>        
    </tr>
    <tr>
        <td class="titlecol">加急汇款签字</td>
        <td colspan="2">&nbsp;</td>
    </tr>
    <tr>
        <td class="titlecol">用途</td>
        <td colspan="2">{{ Purpose }}</td>
    </tr>
</table>