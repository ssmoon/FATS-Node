<div id="loginarea" class="userarea">
    <h2>登录</h2>
    <form>
        <div class="form-group">
            <label>登录名</label>
            <input type="text" name="UserCode" class="form-control" placeholder="请输入你的登录名" />
        </div>
        <div class="form-group">
            <label>密码</label>
            <input type="password" name="Password" class="form-control" placeholder="请输入你的密码" />
        </div>
        <div class="alert alert-danger" role="alert"></div>
        <button data-act="login" type="button" class="btn btn-primary">登录</button>
        <button data-act="goreg" type="button" class="btn btn-link">注册</button>
    </form>
</div>
